{
  "name": "motaxi",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\" --names \"frontend,backend\" --prefix-colors \"cyan,magenta\"",
    "dev:frontend": "next dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "backend:dev": "cd backend && npm run dev",
    "backend:deploy": "cd backend && npm run deploy",
    "db:migrate:local": "cd backend && npm run db:migrate:local"
  },
  "dependencies": {
    "@clerk/localizations": "^3.35.2",
    "@clerk/nextjs": "^6.37.1",
    "@googlemaps/js-api-loader": "^2.0.2",
    "@react-google-maps/api": "^2.20.8",
    "axios": "^1.7.9",
    "leaflet": "^1.9.4",
    "next": "^16.1.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@types/leaflet": "^1.9.14",
    "@types/node": "^22.10.5",
    "@types/react": "^19.0.6",
    "@types/react-dom": "^19.0.2",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "eslint": "^9.18.0",
    "eslint-config-next": "^15.1.6",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2"
  }
}
